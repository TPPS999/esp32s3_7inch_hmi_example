// ============================================================================
// CAN Bus Configuration
// ============================================================================
// Node ID in DECIMAL (will be converted to HEX for COB-ID)
// Example: 136 decimal = 0x88 hex, COB-ID = 0x788 (0x700 + 0x88)
#define CAN_NODE_ID         136

// CAN Speed options: CAN_1000KBPS, CAN_500KBPS, CAN_250KBPS, CAN_125KBPS, etc.
#define CAN_SPEED           CAN_250KBPS

// Heartbeat interval in milliseconds
#define CAN_HEARTBEAT_MS    1000

// Delay before CAN initialization (to allow USB programming)
#define CAN_START_DELAY_MS  15000

// ============================================================================
// Modbus TCP Server Configuration
// ============================================================================
#define MODBUS_SERVER_ID    1
#define MODBUS_PORT         502
#define MODBUS_MAX_CLIENTS  4
#define MODBUS_TIMEOUT_MS   10000

// ============================================================================
// Telnet Server Configuration (Remote Serial Debugging)
// ============================================================================
#define TELNET_ENABLED      true
#define TELNET_PORT         23

// ============================================================================
// Display Configuration
// ============================================================================
#define DISPLAY_VERSION     "VER CUSTOM"
// Hex color format: 0xRRGGBB
// Examples: 0xFF00FF (magenta), 0x00FFFF (cyan), 0xFFFF00 (yellow)
#define DISPLAY_COLOR       0xFF00FF

